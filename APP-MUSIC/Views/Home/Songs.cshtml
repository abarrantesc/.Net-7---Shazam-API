@model APP_MUSIC.Models.SongModel

@{
    ViewData["Title"] = "Home";
}


<div id="cover-spin"></div>

<div class="container text-center">

        <form action="/Home/Songs" method="get">
            <div style="margin-top:2rem;" class="d-flex" role="search">
                <input id="keywdord1" style="width:18rem" name="SearchWord" class="form-control me-2" type="search" placeholder="Full name of songs or artists" aria-label="Search">
                <button id="btnSearch1" class="btn btn-outline-primary" type="submit">Search</button>
            </div>
            <div style="text-align:left" id="invalid-tooltip" class="invalid-tooltip">
                Required field
            </div>
        </form>


        <div style="margin-top:2rem" id="container" class="row">

            @{int i = 1;}
            @foreach (var item in Model.tracks.hits)
                {

                <div class="col-sm-6">
                    <div class="card-search mb-3" style="max-width: 550px;">
                        <div class="row g-0">
                            <div class="col-md-1">
                             
                            <span>@(i++)</span>
                            </div>
                            <div class="col-md-2">
                                <img src=" @item.track.share.image  " width="90" alt="...">
                            </div>
                            <div class="col-md-9">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                      
                                                    <a class="song-link" href="@Url.Action("GetSongDetail","Home", new { id = item.track.key })">
                                                        <h6 class="card-title-search"> @item.track.title </h6>
                                                    </a>
    
                                            <p class="card-subtitle-search">@item.track.subtitle </p>
                                        </div>
                                        <div class="col-md-6">
                                   
                                            @foreach (var item2 in item.track.hub.options)
                                                {
                                                    if (item2.caption == "OPEN")
                                                    {

                                                        foreach (var item3 in item2.actions)
                                                        {
                                                            if (item3.type == "applemusicopen")
                                                            {
